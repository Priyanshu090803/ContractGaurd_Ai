generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  contracts Contract[]  // This side doesn't need onDelete
}

model Contract {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fileName  String
  fileUrl   String?
  riskScore Int
  riskLevel String
  summary   String
  analysis  Json
  createdAt DateTime @default(now())
}